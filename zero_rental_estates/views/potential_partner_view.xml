<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

          <!-- partners Potentiels form view -->

		<record model="ir.ui.view" id="potential_partner_form_view">
            <field name="name">potential_partner.form</field>
            <field name="model">lb.potential_partner</field>
            <field name="arch" type="xml">
                <form string="potential partner Form">
                    <sheet>
                    <div class="oe_title">
                        <field name="company_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                        <h1>
                        <field name="name" default_focus="1" placeholder="Complet Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="civilite" options="{&quot;no_open&quot;: True}" attrs="{'invisible': [('company_type', '=', 'partner')]}"/>
							<field name="district_desired"/>
                            <field name="currency_id" invisible="1"/>
							<field name="budget" widget="monetary"/>
                        </group>
                        <group>
                            <field name="email" widget="email"/>
                            <field name="telephone" widget="phone"/>
                            <field name="notes" placeholder="note interne..."/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- partners Potentiels tree view -->

        <record model="ir.ui.view" id="potential_partner_tree_view">
            <field name="name">potential_partner.tree</field>
            <field name="model">lb.potential_partner</field>
            <field name="arch" type="xml">
                <tree string="potential partner Tree">
                    <field name="company_type"/>
                    <field name="name"/>
                    <field name="district_desired"/>
                    <field name="budget"/>
                    <field name="telephone"/>
                </tree>
            </field>
        </record>

        <!-- partners Potentiels search view -->
        <record id="view_potential_partner_filter" model="ir.ui.view">
            <field name="name">search potential partner</field>
            <field name="model">lb.potential_partner</field>
            <field name="arch" type="xml">
                <search string="search potential partner">
                    <field name="company_type"/>
                    <field name="name"/>
                    <field name="district_desired"/>
                    <field name="telephone"/>
                </search>
            </field>
        </record>



        <record model="ir.actions.act_window" id="potential_partner_list_action">
            <field name="name">partners Potentiels</field>
            <field name="res_model">lb.potential_partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_potential_partner_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new potential holder
                </p>
            </field>
        </record>

        <menuitem id="potential_partner_menu" name="partners Potentiels"
                  parent="partner_menu"
                  action="potential_partner_list_action"/>

    </data>
</odoo>
